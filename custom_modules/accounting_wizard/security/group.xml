<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
	<record id="base.module_category_services_accounting_wizard" model="ir.module.category">	
		<field name="description">Ayuda a manejar permisos de que usuario tiene acceso a cada elemento</field>
	</record>

	<record id="accounting_wizard.group_user" model="res.groups">
		<field name="name">User</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
		<field name="category_id" ref="base.module_category_services_accounting_wizard" />
	</record>			

	<record id="accounting_wizard.group_account_manager" model="res.groups">
		<field name="name">Manager</field>
		<field name="category_id" ref="base.module_category_services_accounting_wizard" />
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
 
	</record>

	<record id="accounting_wizard.group_account_user" model="res.groups">	
		<field name="name">Assistant</field>
        <field name="category_id" ref="base.module_category_services_accounting_wizard"/>
        <field name="implied_ids" eval="[(4, ref('accounting_wizard.group_user'))]"/>
	</record>			
	
	<record id="accounting_wizard.group_account_readonly" model="res.groups">	
		<field name="name">Auditor</field>
		<field name="category_id" ref="base.module_category_services_accounting_wizard" />
        <field name="implied_ids" eval="[(4, ref('accounting_wizard.group_user'))]"/>
	</record>
			
</data>
</odoo>
