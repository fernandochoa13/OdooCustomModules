<odoo>
        <!-- Define the view for budget.model -->
        <record id="view_accounting_rules_form" model="ir.ui.view">
            <field name="name">accounting.rules.form</field>
            <field name="model">accounting.rules</field>
            <field name="arch" type="xml">
                <form string="Accounting Rules Form" class="o_sale_order">
                <sheet class="o_form_sheet">
                    <group name="general_details" class="o_group">
                        <field name="vendor"/>
                        <field name="sequence"/>
                        <field name="company"/>
                    </group>

                    <group name="filters" class="o_group">
                        <field name="county"/>
                        <field name="responsible_to_pay"/>
                        <field name="house_status"/>
                        <field name="applies_to"/>
                        <field name="payment_method"/>
                        <field name="material_labor"/>
                    </group>
                    
                    <group name="applies" class="o_group">
                        <field name="if_own_go_to_owner"/>
                        <field name="if_escrow_go_to_owner"/>
                        <field name="billable"/>
                        <field name="markup"/>
                        <field name="account_to_auto_complete"/>
                        <field name="pre_invoiced"/>
                        <field name="pre_invoiced_product"/>
                        <field name="classify_folder"/>
                        <field name="folder"/>
                        <field name="allowed_products" options="{'no_create': True, 'no_create_edit': True}"/>
                        <field name="notes_for_user"/>
                    </group>
                </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_accounting_rules_tree" model="ir.ui.view">
            <field name="name">accounting.rules.tree</field>
            <field name="model">accounting.rules</field>
            <field name="arch" type="xml">
                <list string="Accounting Rules">
                    <field name="vendor"/>
                    <field name="sequence"/>
                    <field name="company"/>
                    <field name="payment_method"/>
                    <field name="responsible_to_pay"/>
                    <field name="applies_to"/>
                    <field name="billable"/>
                    <field name="pre_invoiced"/>
                    <field name="house_status"/>
                    <field name="classify_folder"/>
                    <field name="county"/>
                </list>
            </field>
        </record>

        <record id="accounting_rules_action" model="ir.actions.act_window">
            <field name="name">AccountingRules</field>
            <field name="res_model">accounting.rules</field>
            <field name="view_mode">list,form</field>
        </record>


</odoo>