<odoo>
    <data>
        <record id="daily_reports_search" model="ir.ui.view">
            <field name="name">daily.report.search</field>
            <field name="model">daily.report</field>
            <field name="arch" type="xml">
                <search string="Default Search">
                        <field name="employee_id"/>
                        <field name="date"/>
                        <separator/>
                        <filter string="Sent Reports" name="sentreports" domain="[('missed_days', '=', False)]"/>
                </search>
            </field>
        </record>

        <record id="daily_report_tree" model="ir.ui.view">
            <field name="name">daily.report.tree</field>
            <field name="model">daily.report</field>
            <field name="arch" type="xml">
                <list string="Daily Reports">
                    <field name="employee_id"/>
                    <field name="date"/>
                    <field name="general_summary"/>
                    <field name="urgent_needs"/>
                    <field name="wins"/>
                    <field name="losses"/>
                </list>
            </field>
        </record>

        <record id="daily_report_wizard_form" model="ir.ui.view">
            <field name="name">daily.report.wizard.form</field>
            <field name="model">daily.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Daily Report Wizard">
                        <group name="general details" class="o_group">
                            <field name="employee_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="employee_pin" password="True" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="date" readonly="1"/> 
                            <field name="general_summary"/>
                            <field name="wins"/>
                            <field name="losses"/>
                            <field name="urgent_needs"/>
                            <field name="questions"/>
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </group>
                        <button name="action_create_report" string="Confirm" type="object" class="oe_highlight"/>
                        <button name="action_refresh_page" string="Cancel" type="object" class="oe_highlight"/>
                </form>
            </field>
        </record>

        <record id="my_report_wizard_form" model="ir.ui.view">
            <field name="name">my.report.wizard.form</field>
            <field name="model">my.report.wizard</field>
            <field name="arch" type="xml">
                <form string="My Reports Wizard">
                        <group name="general details" class="o_group">
                            <field name="employee_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="employee_pin" password="True" options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                    <footer>
                        <button name="confirm_user" string="Confirm" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="manager_report_wizard_form" model="ir.ui.view">
            <field name="name">manager.report.wizard.form</field>
            <field name="model">manager.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Manager Report Wizard">
                        <group name="general details" class="o_group">
                            <field name="manager_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="manager_pin" password="True" options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                    <footer>
                        <button name="action_view_reports" string="Confirm" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="daily_report_form" model="ir.ui.view">
            <field name="name">daily.report.form</field>
            <field name="model">daily.report</field>
            <field name="arch" type="xml">
                <form string="Daily Report Form" class="o_sale_order">

                <sheet class="o_form_sheet">
                <div class="oe_title">
                        <h1>
                            <field name="name" widget="char" class="o_bold_title"/>
                        </h1>
                    </div>
                <group> 
                    <field name='employee_id'/>
                    <field name='date'/>
                    <field name='general_summary'/>
                    <field name='wins'/>
                    <field name='losses'/>
                    <field name='urgent_needs'/>
                    <field name='questions'/>
                </group> 
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
                </form>
            </field>

        </record>


            <record id="daily_report_action" model="ir.actions.act_window">
                <field name="name">Daily Report</field>
                <field name="res_model">daily.report</field>
                <field name="view_mode">tree,form</field>
                <field name="view_id" ref="daily_report_tree"/>
                <field name="context">{'search_default_sentreports': 1}</field>
                <field name="search_view_id" ref="daily_reports_search"/>
            </record>

            <!-- Daily Report Wizard -->
            <record id="daily_report_wizard_action" model="ir.actions.act_window">
                <field name="name">Daily Report</field>
                <field name="res_model">daily.report.wizard</field>
                <field name="view_mode">form</field>
                <field name="target">main</field>
            </record>

            <record id="manager_report_wizard_action" model="ir.actions.act_window">
                <field name="name">Manager Report</field>
                <field name="res_model">manager.report.wizard</field>
                <field name="view_mode">form</field>
                <field name="target">new</field>
            </record>

            <record id="my_report_wizard_action" model="ir.actions.act_window">
                <field name="name">My Reports Wizard</field>
                <field name="res_model">my.report.wizard</field>
                <field name="view_mode">form</field>
                <field name="target">new</field>
            </record>

            <!-- <record id="daily_report_action_user" model="ir.actions.act_window">
                <field name="name">My Reports</field>
                <field name="res_model">daily.report</field>
                <field name="view_mode">tree,form</field>
                <field name="view_id" ref="daily_report_tree"/>
                <field name="domain">[('create_uid', '=', uid)]</field>
            </record> -->

        <!-- Menu item for the user-specific daily reports -->
            <menuitem id="menu_hr_attendance_reports_tree_user" 
                    name="My Reports" 
                    parent="hr_attendance.menu_hr_attendance_root"
                    sequence="93" 
                    action="my_report_wizard_action"/>

            <menuitem id="menu_hr_attendance_reports" name="Add Daily Report" parent="hr_attendance.menu_hr_attendance_root"
                sequence="95" action="daily_report_wizard_action">
            </menuitem>

            <menuitem id="menu_hr_attendance_reports_tree" name="Daily Reports Records" parent="hr_attendance.menu_hr_attendance_root"
                sequence="96" action="daily_report_action" groups="accounting_wizard.group_account_manager">
            </menuitem>

            <menuitem id="menu_hr_attendance_reports_manager_wizard" name="Manager Reports" parent="hr_attendance.menu_hr_attendance_root"
                sequence="94" action="manager_report_wizard_action">
            </menuitem>


    </data>
</odoo>