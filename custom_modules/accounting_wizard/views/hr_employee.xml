        <record id="view_hr_points_tree" model="ir.ui.view">
            <field name="name">hr.points.tree</field>
            <field name="model">hr.points</field>
            <field name="arch" type="xml">
                <list string="HR Points" create="false" delete="false">
                    <field name="received_by"/>
                    <field name="given_by"/>
                    <field name="date"/>
                    <field name="description"/>
                    <field name="points"/>
                </list>
            </field>
        </record>

        <record id="action_hr_points" model="ir.actions.act_window">
