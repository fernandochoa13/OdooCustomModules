        <record id="missing_reports_wizard_action" model="ir.actions.act_window">
                <field name="name">Missing Reports</field>
                <field name="res_model">missing.reports.wizard</field>
                <field name="view_mode">form</field>
                <field name="target">new</field>
        </record>

        
        <menuitem id="menu_hr_attendance_reports_missing_wizard" name="Missing Reports" parent="hr_attendance.menu_hr_attendance_root"
            sequence="92" action="missing_reports_pin_wizard_action">
        </menuitem> 
