<odoo>
    <data>
        <record id="missing_reports_search" model="ir.ui.view">
            <field name="name">daily.report.missing.search</field>
            <field name="model">daily.report</field>
            <field name="arch" type="xml">
                <search string="Default Search">
                        <field name="employee_id"/>
                        <field name="missed_days"/>
                        <separator/>
                        <filter string="Employee" name="employeegroup" context="{'group_by': 'employee_id'}"/>
                </search>
            </field>
        </record>

        <record id="missing_report_pin_wizard_form" model="ir.ui.view">
            <field name="name">missing.report.pin.wizard.form</field>
            <field name="model">missing.report.pin.wizard</field>
            <field name="arch" type="xml">
                <form string="Missing Report Wizard">
                        <group name="general details" class="o_group">
                            <field name="employee_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="employee_pin" password="True" options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                    <footer>
                        <button name="confirm_user" string="Confirm" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="pms_missing_reports_tree" model="ir.ui.view">
            <field name="name">missing.reports.tree</field>
            <field name="model">missing.reports</field>
            <field name="arch" type="xml">
                <list string="Missing Reports" create="false">
                    <field name="employee_name"/>
                    <field name="date"/>
                </list>
            </field>
        </record>

        <record id="missing_report_wizard_form" model="ir.ui.view">
            <field name="name">missing.reports.wizard.form</field>
            <field name="model">missing.reports.wizard</field>
            <field name="arch" type="xml">
                <form string="Missing Reports Wizard">
                        <group name="general details" class="o_group">
                            <field name="start_date" />
                            <field name="end_date"/>
                        </group>
                    <footer>
                        <button name="generate_missing_reports" string="View missing reports" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="missing_reports_pin_wizard_action" model="ir.actions.act_window">
                <field name="name">Missing Report Wizard</field>
                <field name="res_model">missing.report.pin.wizard</field>
                <field name="view_mode">form</field>
                <field name="target">new</field>
        </record>

        <!-- <record id="daily_report_missing_action" model="ir.actions.act_window">
