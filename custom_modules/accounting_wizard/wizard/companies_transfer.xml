<odoo>
<data>
        <!-- Form View -->
        <record id="view_companies_transfer_wizard_form" model="ir.ui.view">
            <field name="name">companies.transfer.form</field>
            <field name="model">companies.transfer</field>
            <field name="arch" type="xml">
                <form string="Transfer Between Accounts">
                        <group name="general details" class="o_group">
                            <field name="from_company" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="date"/> 
                            <field name="from_journal_id" domain="[('company_id', '=', from_company)]" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="to_company" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="bank" domain="[('company_id', '=', to_company)]" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="reference"/>
                            <field name="amount"/> 
                        </group>
                    <footer>
                        <button name="confirm" string="Confirm" type="object" class="oe_highlight"/>
                        <button special="cancel" string="Discard" type="object" class="btn-danger"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="view_companies_transfer_wizard_action" model="ir.actions.act_window">
            <field name="name">Companies Transfer</field>
            <field name="res_model">companies.transfer</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
</data>
</odoo>