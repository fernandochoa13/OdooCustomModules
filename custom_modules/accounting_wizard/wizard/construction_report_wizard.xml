<odoo>
    <data>
        <!-- Form View -->
        <record id="view_construction_report_wizard_form" model="ir.ui.view">
            <field name="name">construction.report.wizard.form</field>
            <field name="model">construction.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Transfer Between Journals Wizard">
                        <group name="general details" class="o_group">
                            <field name="property_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="escrow_property"/>
                            <field name="company_id"/>
                        </group>
                    <footer>
                        <button name="get_report" string="Get Report" type="object" class="oe_highlight"/>
                        <button special="cancel" string="Discard" type="object" class="btn-danger"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="view_construction_report_wizard_action" model="ir.actions.act_window">
            <field name="name">Construction Report Wizard</field>
            <field name="res_model">construction.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="view_construction_report_tree" model="ir.ui.view">
        <field name="name">construction.report.tree</field>
        <field name="model">construction.report</field>
        <field name="arch" type="xml">
            <list string="Construction Report Tree" delete="false" create="false">
                <field name="property_name"/>
                <field name="owner_name"/>
                <field name="house_model"/>
                <field name="code"/>
                <field name="product"/>
                <field name="budget_amount" sum="Total Budget Amount"/>
                <field name="real_cost" sum="Total Real Cost"/>
                <field name="difference" sum="Total Difference"/>
                <field name="proyected_cost" sum="Total Proyected Cost"/>
                <button name="view_product_detail" type="object" string="View Product Detail" class="btn-primary"/>
            </list>
        </field>
    </record>

    <record id="construction_report_action" model="ir.actions.act_window">
        <field name="name">Construction Report</field>
        <field name="res_model">construction.report</field>
        <field name="view_mode">tree</field>
    </record>


    </data>
</odoo>