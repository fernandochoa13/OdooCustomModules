<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="land_acquisition_view_search" model="ir.ui.view">
            <field name="name">land.acquisition.search</field>
            <field name="model">land.acquisition</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Addres or Parcel Id."/>
                    <field name="county"/>
                    <field name="zoning"/>
                    <field name="user_id"/>
                    <field name="inspection_date"/>
                    <field name="date_end"/>
                    <field name="purchase_price"/>
                    <field name="sold_price"/>
                    <field name="profit_margin"/>
                    <field name="property_model_id"/>
                    <field name="tag_ids"/>
                    <field name="date_start"/>
                    <field name="emd"/>
                    <field name="notes"/>
                    <field name="closing_date"/>
                    <field name="stage_id"/>
                    <field name="company_id"/>
                    <field name="buyer_id"/>
                    <field name="scrow_status"/>
                    <field name="lot_inspection"/>
                    <field name="sent_for_survey"/>
                    <field name="file_open"/>
                    <field name="loan"/>
                    <field name="week_number"/>
                    <field name="business_decision"/>
                    <field name="acquisition_status"/>
                    <field name="turtle_tree_inspection"/>
                    <field name="scrub_jays"/>
                    <field name="hoa"/>
                    <field name="utility_report"/>
                    <field name="floodzone"/>
                    <filter string="Disponibles" name="buyer_id" domain="[('buyer_id', '=', False)]"/>
                </search>
            </field>
        </record>
        <record id="land_acquisition_view_tree" model="ir.ui.view">
            <field name="name">land.acquisition.tree</field>
            <field name="model">land.acquisition</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" string="Addres or Parcel Id." optional="show"/>
                    <field name="county" optional="show"/>
                    <field name="zoning" optional="show"/>
                    <field name="user_id" optional="show"/>
                    <field name="inspection_date" optional="show"/>
                    <field name="date_end" optional="show"/>
                    <field name="purchase_price" optional="show" sum="Sum of Purchase Prices"/>
                    <field name="sold_price" optional="show" avg="Average of Sold Price"/>
                    <field name="profit_margin" optional="show" sum="Sum of Profit Margins"/>
                    <field name="property_model_id" optional="show"/>
                    <field name="tag_ids" optional="show" widget="many2many_tags"/>
                    <field name="date_start" optional="hide"/>
                    <field name="emd" optional="hide"/>
                    <field name="notes" optional="hide"/>
                    <field name="closing_date" optional="hide"/>
                    <field name="stage_id" optional="hide"/>
                    <field name="company_id" optional="hide"/>
                    <field name="buyer_id" optional="hide"/>
                    <field name="scrow_status" optional="hide"/>
                    <field name="lot_inspection" optional="hide"/>
                    <field name="sent_for_survey" optional="hide"/>
                    <field name="file_open" optional="hide"/>
                    <field name="loan" optional="hide"/>
                    <field name="week_number" optional="hide"/>
                    <field name="business_decision" optional="hide"/>
                    <field name="acquisition_status" optional="hide"/>
                    <field name="turtle_tree_inspection" optional="hide"/>
                    <field name="scrub_jays" optional="hide"/>
                    <field name="hoa" optional="hide"/>
                    <field name="utility_report" optional="hide"/>
                    <field name="floodzone" optional="hide"/>
                </list>
            </field>
        </record>
        <record id="land_acquisition_view_form" model="ir.ui.view">
            <field name="name">land.acquisition.form</field>
            <field name="model">land.acquisition</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="stage_id" widget="statusbar" options="{'clickable': '1'}" modifiers="{&quot;required&quot;: true}" can_create="true" can_write="true"/>
                    </header>
                    <sheet string="Land Acquisition">
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Name..." modifiers="{&quot;required&quot;: true}"/>
                            </h1>
                        </div>
                        <group>

                            <group>
                                <field name="county"/>
                                <label string="Dates" for="date_start"/>
                                <div class="o_row">
                                    <field name="date_start" widget="daterange" options="{&quot;related_end_date&quot;: &quot;date_end&quot;}"/>
                                    <span> to </span>
                                    <field name="date_end" widget="daterange" options="{&quot;related_start_date&quot;: &quot;date_start&quot;}"/>
                                </div>
                                <field name="user_id"/>
                                <field name="company_id" invisible="True"/>
                                <field name="emd"/>
                                <field name="tag_ids" widget="many2many_tags"/>
                                <field name="parcel_id"/>
                                <field name="address"/>
                                <field name="scrow_status"/>
                                <field name="lot_inspection"/>
                                <field name="sent_for_survey"/>
                                <field name="file_open"/>
                                <field name="loan"/>
                                <field name="week_number"/>
                                <field name="turtle_tree_inspection"/>
                            </group>
                            <group>
                                <field name="inspection_date"/>
                                <field name="zoning"/>
                                <field name="closing_date"/>
                                <field name="purchase_price"/>
                                <field name="buyer_id"/>
                                <field name="property_model_id" options="{'no_create': True}"/>
                                <field name="sold_price"/>
                                <field name="profit_margin"/>
                                <field name="business_decision"/>
                                <field name="acquisition_status"/>
                                <field name="scrub_jays"/>
                                <field name="hoa"/>
                                <field name="utility_report"/>
                                <field name="floodzone"/>

                            </group>
                            <field name="notes" placeholder="SF (w/s)"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter" name="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                        <field name="activity_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="land_acquisition_view_calendar" model="ir.ui.view">
            <field name="name">land.acquisition.calendar</field>
            <field name="model">land.acquisition</field>
            <field name="arch" type="xml">
                <calendar date_start="inspection_date" create_name_field="name"/>
            </field>
        </record>
        <record id="land_acquisition_view_gantt" model="ir.ui.view">
            <field name="name">land.acquisition.gantt</field>
            <field name="model">land.acquisition</field>
            <field name="arch" type="xml">
                <gantt date_start="date_start" date_stop="date_end"/>
            </field>
        </record>
        <record id="land_acquisition_view_graph" model="ir.ui.view">
            <field name="name">land.acquisition.graph</field>
            <field name="model">land.acquisition</field>
            <field name="arch" type="xml">
                <graph sample="1">
                    <field name="emd" type="measure"/>
                    <field name="create_date" type="row"/>
                </graph>
            </field>
        </record>
        <record id="land_acquisition_view_pivot" model="ir.ui.view">
            <field name="name">land.acquisition.pivot</field>
            <field name="model">land.acquisition</field>
            <field name="arch" type="xml">
                <pivot sample="1">
                    <field name="emd" type="measure"/>
                    <field name="stage_id" type="col"/>
                    <field name="inspection_date" type="row"/>
                </pivot>
            </field>
        </record>
        <record id="land_acquisition_view_kanban" model="ir.ui.view">
            <field name="name">land.acquisition.kanban</field>
            <field name="model">land.acquisition</field>
            <field name="arch" type="xml">

                <kanban default_group_by="stage_id" default_order="priority desc, sequence asc, id desc">
                    <field name="user_id" widget="many2one_avatar_user"/>
                    <field name="currency_id"/>
                    <field name="stage_id"/>

                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_details">
                                    <div class="o_kanban_record_top" name="studio_auto_kanban_top">
                                        <div class="o_kanban_record_headings" name="studio_auto_kanban_headings">
                                            <field name="priority" widget="boolean_favorite" nolabel="1"/>
                                            <strong class="o_kanban_record_title" name="studio_auto_kanban_title">
                                                <field name="name"/>
                                            </strong>
                                        </div>
                                        <div class="o_dropdown_kanban dropdown">
                                            <a role="button" class="dropdown-toggle o-no-caret btn" data-bs-toggle="dropdown" data-display="static" href="#" aria-label="Dropdown Menu" title="Dropdown Menu">
                                            <span class="fa fa-ellipsis-v"/>
                                            </a>
                                            <div class="dropdown-menu" role="menu">
                                                <a t-if="widget.editable" role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                                <a t-if="widget.deletable" role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                                <ul class="oe_kanban_colorpicker" data-field="color"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body" name="studio_auto_kanban_body">
                                        <field name="tag_ids" options="{'color_field': 'color'}"/>
                                    </div>
                                    <div class="o_kanban_record_bottom" name="studio_auto_kanban_bottom">
                                        <div class="oe_kanban_bottom_left" name="studio_auto_kanban_bottom_left">
                                            <field name="emd" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right" name="studio_auto_kanban_bottom_right">
                                            <field name="kanban_state" widget="state_selection"/>
                                            <t t-set="unassigned" t-translation="on">Unassigned</t>
                                            <img t-att-src="kanban_image('res.users', 'avatar_128', record.user_id.raw_value)" t-att-title="record.user_id.value || unassigned" t-att-alt="record.user_id.value" class="oe_kanban_avatar o_image_24_cover float-right"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>

        </record>

        <record id="action_land_acquisition" model="ir.actions.act_window">
            <field name="name">Land Acquisitions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">land.acquisition</field>
            <field name="view_mode">list,kanban,form,calendar,gantt,pivot,graph</field>
            <field name="context">{}</field>
        </record>
    </data>
</odoo>