<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <record id="ao_properties_view_form" model="ir.ui.view">
        <field name="name">plus.properties.form</field>
        <field name="model">plus.properties</field>
        <field name="arch" type="xml">
            <form>
                <sheet string="Properties">
                    <field name="active" invisible="1"/>
                    <field name="website_url" invisible="1"/>
                    <field name="can_publish" invisible="1"/>
                    <field name="website_published" invisible="1"/>
                    <div class="oe_button_box" name="button_box">
                        <field name="is_published" widget="website_redirect_button" />
                        <button groups="documents.group_documents_user" name="action_see_documents" type="object" class="oe_stat_button" icon="fa-file-text-o">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="document_count"/></span>
                                <span class="o_stat_text">Documents</span>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon" text="Archived" bg_color="bg-danger"/>
                    <field name="kanban_state" widget="state_selection"/>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'size': [0,270]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" required="1" placeholder="Name..."/>
                        </h1>
                    </div>
                    <group name="general_group">
                        <group name="public_information" string="Public Information">
                            <field name="value" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="country_id" options="{'no_create': True}"/>
                            <field name="state_id" options="{'no_create': True}"/>
                            <field name="city_id" context="{'default_country_id': country_id, 'default_state_id': state_id}"/>
                            <field name="address"/>
                            <field name="partner_phone" widget="phone" options="{'enable_sms': True}"/>
                            <field name="partner_email" widget="email"/>
                            <field name="bedrooms" string="Bedrooms" help="Quantity of bedrooms"/>
                            <field name="bathrooms" string="Bathrooms" help="Quantity of bathrooms"/>
                            <field name="area"/>
                            <field name="garage" string="Garage"/>
                        </group>
                        <group name="properties_internal" string="Internal Information">
                            <field name="partner_id"/>
                            <field name="user_id" widget="many2one_avatar_user"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                            <field name="website_id" options="{'no_create': True}"/>
                            <field name="website_ribbon_id"/>
                            <field name="commission" string="Commission" help="Information regarding any commission or special deals associated with the property."/>
                            <field name="service_charges" widget="monetary" help="The charges associated with the services provided for the property." string="Service charges"/>
                            <field name="property_type" string="Property Type" help="Select the Property Type"/>
                            <field name="unit_type" string="Unit type" help="The type or category of the unit (e.g., apartment, villa, office)"/>
                        </group>
                    </group>
                    <group name="final_group">
                        <group name="occupation_group" string="Occupation">
                            <field name="rent_type"/>
                            <field name="rented_till" string="Rented Till" help="Property is rented until this date"/>
                            <field name="is_vacant"/>
                        </group>
                        <group name="additional_details" string="Additional Details">
                            <field name="about_text"/>
                        </group>
                    </group>
                    <group>
                        <group name="images" string="Images">
                            <field
                                name="images_attachment_ids"
                                context="{'default_res_id': id, 'default_res_model': 'plus.properties', 'default_plus_property_images_id': id}"
                            >
                                <list string="Pictures">
                                    <field name="name"/>
                                </list>
                            </field>
                            <field
                                name="views_attachment_ids"
                                context="{'default_res_id': id, 'default_res_model': 'plus.properties', 'default_plus_property_views_id': id}"
                            >
                                <list string="Views">
                                    <field name="name"/>
                                </list>
                            </field>
                        </group>
                        <group name="files" string="files">
                            <field
                                name="marketing_attachment_ids"
                                context="{'default_res_id': id, 'default_res_model': 'plus.properties', 'default_plus_property_marketing_id': id}"
                            >
                                <list string="Marketing (PDFs)">
                                    <field name="name"/>
                                </list>
                            </field>
                            <field
                                name="legal_attachment_ids"
                                context="{'default_res_id': id, 'default_res_model': 'plus.properties', 'default_plus_property_legal_id': id}"
                            >
                                <list string="Legal (PDFs)">
                                    <field name="name"/>
                                </list>
                            </field>
                        </group>
                    </group>
                    <group name="website_desc" string="Website HTML description">
                        <field name="website_description" string=""/>
                    </group>
                    <group name="website_key_facts" string="Website Key Facts">
                        <field name="website_key_facts" string=""/>
                    </group>
                </sheet>
                <div class="oe_chatter" name="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                    <field name="activity_ids"/>
                </div>
            </form>
        </field>
   </record>
    <record id="ao_properties_view_calendar" model="ir.ui.view">
        <field name="name">plus.properties.calendar</field>
        <field name="model">plus.properties</field>
        <field name="arch" type="xml">
            <calendar date_start="date" create_name_field="name"/>
        </field>
    </record>
    <record id="ao_properties_view_map" model="ir.ui.view">
        <field name="name">plus.properties.map</field>
        <field name="model">plus.properties</field>
        <field name="arch" type="xml">
            <map res_partner="partner_id">
              <field name="partner_id" string="Partner"/>
            </map>
        </field>
    </record>
    <record id="ao_properties_view_pivot" model="ir.ui.view">
        <field name="name">plus.properties.pivot</field>
        <field name="model">plus.properties</field>
        <field name="arch" type="xml">
            <pivot sample="1">
              <field name="value" type="measure"/>
              <field name="date" type="row"/>
            </pivot>
        </field>
    </record>
    <record id="ao_properties_view_graph" model="ir.ui.view">
        <field name="name">plus.properties.graph</field>
        <field name="model">plus.properties</field>
        <field name="arch" type="xml">
            <graph sample="1">
              <field name="value" type="measure"/>
              <field name="create_date" type="row"/>
            </graph>
        </field>
    </record>
    <record id="ao_properties_view_kanban" model="ir.ui.view">
        <field name="name">plus.properties.kanban</field>
        <field name="model">plus.properties</field>
        <field name="arch" type="xml">
            <kanban  default_order="sequence asc, id desc">
                <field name="color"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="currency_id"/>
                <progressbar field="kanban_state" colors="{&quot;normal&quot;: &quot;200&quot;, &quot;done&quot;: &quot;success&quot;, &quot;blocked&quot;: &quot;danger&quot;}" sum_field="value"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} oe_kanban_global_click">
                            <field class="o_kanban_image" name="image_1920" widget="image" options="{&quot;zoom&quot;: true, &quot;background&quot;: true, &quot;preventClicks&quot;: false}"/>
                            <div class="o_kanban_record_details">
                                <div class="o_kanban_record_top" name="auto_kanban_top">
                                    <div class="o_kanban_record_headings" name="auto_kanban_headings">
                                    <strong class="o_kanban_record_title" name="auto_kanban_title">
                                        <field name="name"/>
                                    </strong>
                                    </div>
                                    <div class="o_dropdown_kanban dropdown">
                                    <a role="button" class="dropdown-toggle o-no-caret btn" data-bs-toggle="dropdown" data-display="static" href="#" aria-label="Dropdown Menu" title="Dropdown Menu">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <a t-if="widget.editable" role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                        <a t-if="widget.deletable" role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                                    </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body" name="auto_kanban_body">
                                    <field name="unit_type" display="full"/>
                                    <field name="property_type" display="full"/>
                                </div>
                                <div class="o_kanban_record_bottom" name="auto_kanban_bottom">
                                    <div class="oe_kanban_bottom_left" name="auto_kanban_bottom_left">
                                    <field name="value" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right" name="auto_kanban_bottom_right">
                                    <field name="kanban_state" widget="state_selection"/>
                                    <t t-set="unassigned" t-translation="on">Unassigned</t>
                                    <img t-att-src="kanban_image('res.users', 'avatar_128', record.user_id.raw_value)" t-att-title="record.user_id.value || unassigned" t-att-alt="record.user_id.value" class="oe_kanban_avatar o_image_24_cover float-right"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="ao_properties_view_tree" model="ir.ui.view">
        <field name="name">plus.properties.tree</field>
        <field name="model">plus.properties</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="property_type"/>
                <field name="unit_type"/>
                <field name="value" widget="monetary" options="{'currency_field': 'currency_id'}" sum="Total"/>
                <field name="rented_till"/>
                <field name="is_vacant"/>
                <field name="partner_id"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="website_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="currency_id" invisible="1"/>
            </list>
        </field>
    </record>
    <record id="action_properties" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">plus.properties</field>
        <field name="view_mode">list,kanban,form,calendar,map,pivot,graph</field>
        <field name="context">{}</field>
    </record>
</odoo>
