<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ao_sales_crm_lead_view_form" model="ir.ui.view">
        <field name="name">ao_sales.crm.lead.views.form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                <page string="Properties Survey" name="survey_fields">
                    <group>
                        <group name="survey_fields_g1" string="Investment">
                            <field name="has_capital"/>
                            <field name="pre_approved" invisible="1"/>
                        </group>
                        <group name="survey_fields_g12" string="Purchase/Construction">
                            <field name="interest"/>
                            <field name="city_of_interest_advice"/>
                            <field name="city_of_interest"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    <record id="ao_sales_crm_lead_view_tree_reporting_view" model="ir.ui.view">
        <field name="name">ao_sales.crm.lead.views.tree</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_tree_reporting"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='team_id']" position="after">
                <field name="has_capital" optional="show"/>
                <field name="city_of_interest_advice" optional="show"/>
                <field name="city_of_interest" optional="show"/>
                <field name="interest" optional="show"/>
            </xpath>
        </field>
    </record>
    <record id="ao_sales_crm_lead_view_search_view" model="ir.ui.view">
        <field name="name">ao_sales.crm.lead.views.search</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search[1]/field[@name='name']" position="before">
                <field name="has_capital"/>
                <field name="interest"/>
                <field name="city_of_interest_advice"/>
                <field name="city_of_interest"/>
            </xpath>
            <xpath expr="//filter[@name='salesperson']" position="before">
                <filter name="has_capital" string="Has Capital?"
                        context="{'group_by': 'has_capital'}"/>
                <filter name="city_of_interest_advice" string="City of Interest for Construction?"
                        context="{'group_by': 'city_of_interest_advice'}"/>
            </xpath>
        </field>
    </record>
</odoo>
