<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View for Balance Sheet Report (Commented Out) -->
        <record id="view_account_analytic_bs_report_tree" model="ir.ui.view">
            <field name="name">analytic.bs.report.tree</field>
            <field name="model">account.analytic.bs.report</field>
            <field name="arch" type="xml">
                <list string="Balance Sheet Report" sample="1">
                    <!-- <header>
                        <button name="action_view_journal_items"
                                string="See Journal Items"
                                type="object"
                                class="oe_highlight"
                                />
                    </header> -->
                    <field name="date"/>
                    <field name="name"/>
                    <field name="analytic_account_id" invisible="context.get('group_by')"/>
                    <field name="account_type" invisible="context.get('group_by')"/>
                    <field name="amount" sum="Total" decoration-bf="1"/>
                    <field name="move_id" invisible="1"/>
                    <button name="action_view_move" 
                        string="&#160;View Move"
                        type="object"
                        icon="fa-external-link"
                        invisible="not move_id"/>
                </list>
            </field>
        </record>

        <!-- Pivot View for Balance Sheet Report -->
        <record id="view_account_analytic_bs_report_pivot" model="ir.ui.view">
            <field name="name">analytic.bs.report.pivot</field>
            <field name="model">account.analytic.bs.report</field>
            <field name="arch" type="xml">
                <pivot string="Balance Sheet Report" sample="1">
                    <field name="analytic_account_id" type="col"/>
                    <field name="account_type" type="row"/>
                    <field name="general_account_id" type="row"/>
                    <field name="amount" type="measure"/>
                    <field name="name" type="row"/>
                    <field name="date" type="row"/>
                </pivot>
            </field>
        </record>

        <!-- Search View for Balance Sheet Report -->
        <record id="view_account_analytic_bs_report_filter" model="ir.ui.view">
            <field name="name">analytic.bs.report.search</field>
            <field name="model">account.analytic.bs.report</field>
            <field name="arch" type="xml">
                <search string="Balance Sheet Report">
                    <field name="date"/>
                    <field name="analytic_account_id"/>
                    <field name="account_type"/>
                    <!-- <separator/>
                    <filter string="Up to 2020" domain="[('date', '&lt;=', '2020-12-31')]"/>
                    <filter string="Up to 2021" domain="[('date', '&lt;=', '2021-12-31')]"/>
                    <filter string="Up to 2022" domain="[('date', '&lt;=', '2022-12-31')]"/>
                    <filter string="Up to 2023" domain="[('date', '&lt;=', '2023-12-31')]"/>
                    <filter string="Up to 2024" domain="[('date', '&lt;=', '2024-12-31')]"/>
                    <filter string="Up to 2025" domain="[('date', '&lt;=', '2025-12-31')]"/>
                    <separator/> -->
                    <group expand="0" string="Group By">
                        <filter name="group_by_date" string="Date" context="{'group_by':'date'}"/>
                        <filter name="group_by_account_type" string="Account Type" context="{'group_by':'account_type'}"/>
                        <filter name="group_by_analytic_account" string="Analytic Account" context="{'group_by':'analytic_account_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <record id="bs_report_company_filter" model="ir.rule">
            <field name="name">Balance Sheet Report - Multicompany Rule</field>
            <field ref="pms.model_account_analytic_bs_report" name="model_id"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="active" eval="True"/> 
        </record>

        <!-- Action Window for Balance Sheet Report -->
        <record id="action_account_analytic_bs_report" model="ir.actions.act_window">
            <field name="name">Analytic Balance Sheet Report</field>
            <field name="res_model">account.analytic.bs.report</field>
            <field name="view_mode">pivot</field>
            <field name="context">{'group_by':['account_type', 'general_account_id'], 'pivot_measures':['amount']}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Generate your custom Balance Sheet report by analytic account.
                </p>
            </field>
        </record>

        <!-- Menu Item to access the report -->
        <menuitem
            id="menu_finance_analytic_reports_main"
            name="Analytic Reports"
            parent="account.menu_finance_reports"
            sequence="1000"/>

        <menuitem
            id="menu_account_analytic_bs_report"
            name="Balance Sheet Report"
            action="action_account_analytic_bs_report"
            parent="pms.menu_finance_analytic_reports_main"
            sequence="102"/>
    </data>
</odoo>