<odoo>
    <record id="expectedco_wizard_form" model="ir.ui.view">
        <field name="name">expectedco.wizard.form</field>
        <field name="model">expectedco.wizard</field>
        <field name="arch" type="xml">
            <form string="Expected CO Wizard">
                    <group name="general details" class="o_group">
                        <field name="month"/>
                        <field name="status_construction"/>
                    </group>
                <footer>
                    <button name="open_report" string="Open Expected CO Report" type="object" class="oe_highlight"/>
                    <button special="cancel" string="Cancel" type="object" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="expectedco_wizard_action" model="ir.actions.act_window">
        <field name="name">Expected CO Wizard</field>
        <field name="res_model">expectedco.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="expectedco_search" model="ir.ui.view">
            <field name="name">expectedco.report.search</field>
            <field name="model">expectedco.report</field>
            <field name="arch" type="xml">
                <search string="Default Search">
                    <field name="project_name"/>
                    <field name="incomplete_activities"/>
                    <field name="expected_co_date"/>
                </search>
            </field>
    </record>


    <record id="expectedco_tree" model="ir.ui.view">
        <field name="name">expectedco.report.tree</field>
        <field name="model">expectedco.report</field>
        <field name="arch" type="xml">
            <list string="Expected CO Report">
                <field name="project_name"/>
                <field name="county"/>
                <field name="own_third_property"/>
                <field name="incomplete_activities"/>
                <field name="total_duration"/>
                <field name="expected_co_date"/>

            </list>
        </field>
    </record>

    <record id="action_expected_co_report_button_inherit" model="ir.ui.view">
       <field name="name">action.expected.co.report.button.inherit</field>
       <field name="model">expectedco.report</field>
       <field name="inherit_id" ref="pms.expectedco_tree"/>
       <field name="arch" type="xml">
        <xpath expr="//tree" position="attributes">
            <attribute name="js_class">button_in_expectedco_report_tree</attribute>
        </xpath>
       </field>
   </record>

    <record id="expectedco_report_action" model="ir.actions.act_window">
        <field name="name">Expected CO Report</field>
        <field name="res_model">expectedco.report</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="pms.expectedco_search"/>
    </record>

