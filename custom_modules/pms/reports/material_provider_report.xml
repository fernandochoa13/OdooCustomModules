<odoo>

<record id="provider_search" model="ir.ui.view">
        <field name="name">provider.report.search</field>
        <field name="model">provider.report</field>
        <field name="arch" type="xml">
            <search string="Default Search">
                <field name="provider_name"/>
                <field name="total_orders"/>
                <field name="total_delivered_orders"/>
                <field name="total_rejected_orders"/>
                <field name="pct_rejection"/>
                <field name="average_rejection_per_order"/>
                <field name="average_delivery_time"/>
                <field name="median_delivery_time"/>
                <field name="no_availability"/>

            </search>
        </field>
</record>


<record id="provider_tree" model="ir.ui.view">
    <field name="name">provider.report.tree</field>
    <field name="model">provider.report</field>
    <field name="arch" type="xml">
        <list string="Material Provider Report" create="false">
                <field name="provider_name"/>
                <field name="total_orders"/>
                <field name="total_delivered_orders"/>
                <field name="total_rejected_orders"/>
                <field name="pct_rejection"/>
                <field name="average_rejection_per_order"/>
                <field name="average_delivery_time"/>
                <field name="median_delivery_time"/>
                <field name="no_availability"/>
        </list>
    </field>
</record>


<record id="provider_report_action" model="ir.actions.act_window">
    <field name="name">Material Provider Report</field>
    <field name="res_model">provider.report</field>
    <field name="view_mode">tree,form</field>
    <field name="search_view_id" ref="pms.provider_search"/>
</record>

    <record id="action_export_provider_report" model="ir.actions.server">
        <field name="name">Export to PDF</field>
        <field name="model_id" ref="model_provider_report"/>
        <field name="binding_model_id" ref="model_provider_report"/>
        <field name="state">code</field>
        <field name="code">
            action = {
                'type': 'ir.actions.report',
                'report_name': 'pms.provider_report_pdf_template',
                'report_type': 'qweb-pdf',
                'context': dict(env.context, active_ids=env.context.get('active_ids')),
                'data': {'ids': env.context.get('active_ids')}, 
            }
        </field>
    </record>

</odoo>