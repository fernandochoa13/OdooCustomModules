<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_pms_phases_report_tree" model="ir.ui.view">
            <field name="name">pms.phases.report.tree</field>
            <field name="model">pms.phases.report</field>
            <field name="arch" type="xml">
                <list string="Project Phase Summary Report" create="false" edit="false">
                    <field name="project_id" optional="show"/>
                    <field name="county" optional="show"/>
                    <field name="superintendent" optional="show"/>
                    <field name="cop_days" optional="show"/>
                    <field name="cop1_days" optional="show"/>
                    <field name="cop2_days" optional="show"/>
                    <field name="cop3_days" optional="show"/>
                    <field name="cop4_days" optional="show"/>
                    <field name="cop5_days" optional="show"/>
                    <field name="kpi1" optional="show"/>
                    <field name="kpi2" optional="show"/>
                    <field name="kpi3" optional="show"/>
                    <field name="total_days" optional="show"/>
                </list>
            </field>
        </record>

        <record id="view_pms_phases_report_search" model="ir.ui.view">
            <field name="name">pms.phases.report.search</field>
            <field name="model">pms.phases.report</field>
            <field name="arch" type="xml">
                <search string="Search Project Phases Report">
                    <field name="project_id"/>
                    <group expand="0" string="Group By">
                        <filter string="County" name="group_by_county" context="{'group_by': 'county'}"/>
                        <filter string="Superintendent" name="group_by_superintendent" context="{'group_by': 'superintendent'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_pms_phases_report" model="ir.actions.act_window">
            <field name="name">Project Phase Summary Report</field>
            <field name="res_model">pms.phases.report</field>
            <field name="view_mode">tree</field>
            <field name="search_view_id" ref="view_pms_phases_report_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Generate the Project Phase Summary Report.
                </p>
            </field>
        </record>

    </data>
</odoo>