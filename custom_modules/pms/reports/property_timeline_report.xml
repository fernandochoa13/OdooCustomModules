<odoo>

    <record id="property_selection_wizard_form" model="ir.ui.view">
        <field name="name">property.selection.wizard.form</field>
        <field name="model">timeline.select.property.wizard</field>
        <field name="arch" type="xml">
            <form string="Select Property Wizard">
                    <group name="general details" class="o_group">
                        <field name="property_id" placeholder="Property..." options="{'no_create': True}"/>
                    </group>
                <footer>
                    <button name="select_property" string="SELECT PROPERTY" type="object" class="btn-success"/>
                    <button special="cancel" string="BACK" type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="timeline_property_selector_wizard" model="ir.actions.act_window">
        <field name="name">Property Selection</field>
        <field name="res_model">timeline.select.property.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="pms_property_timeline_view_report_gantt" model="ir.ui.view">
        <field name="name">pms.property.timeline.view.report.gantt</field>
        <field name="model">pms.property.timeline.report</field>
        <field name="arch" type="xml">
            <gantt 

                string="Property Timeline" 

                date_start="record_start_date" 
                date_stop="record_end_date" 

                scales="day,week,month,year"
                default_scale="year"
                offset="-1" 

                default_group_by="status"
                color="color"
                
                disable_drag_drop="true" 

                cell_create="false"
                edit="false"
                delete="false"
                plan="false"
                on_create="%(pms.timeline_property_selector_wizard)d"

            >
                <field name="name"/>
                <field name="record_start_date"/>
                <field name="record_end_date"/>
                <field name="color" widget="color_picker"/>
                <field name="type"/>
                <field name="status"/>
                <field name="property_id"/>
            </gantt>
        </field>
    </record>

    <record id="pms_property_timeline_report_view" model="ir.actions.act_window">
        <field name="name">Property Timeline Report</field>
        <field name="res_model">pms.property.timeline.report</field>
        <field name="view_mode">gantt</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No data available for the Property Timeline Report
            </p>
        </field>
    </record>

</odoo>