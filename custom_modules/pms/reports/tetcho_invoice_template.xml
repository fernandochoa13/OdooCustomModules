<odoo>

    <record id="action_sale_order_new_report" model="ir.actions.report">
        <field name="name">New Quotation / Order</field>
        <field name="model">sale.order</field>
        <field name="binding_model_id" ref="model_sale_order"/>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">pms.sale_order_new_report</field>
        <field name="binding_view_types">form,list</field>
        <field name="print_report_name">(object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or 'Order - %s' % (object.name)</field>
    </record>

    <template id="sale_order_new_report">
        <t t-call="web.html_container">
            <meta charset="UTF-8"/>
            <head>
                <style type="text/css">
                    body {
                        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                        color: #333;
                        line-height: 1.5;
                    }
                    .header-table {
                        width: 100%;
                        border-collapse: collapse;
                        margin-bottom: 20px;
                    }
                    .estimate-title {
                        color: #2c3e50;
                        font-size: 28px;
                        font-weight: 600;
                        margin: 15px 0 5px 0;
                        border-bottom: 3px solid #3498db;
                        padding-bottom: 10px;
                    }
                    .info-box {
                        background-color: #f8f9fa;
                        border-radius: 8px;
                        padding: 15px;
                        margin-bottom: 20px;
                    }
                    .info-label {
                        color: #6c757d;
                        font-size: 11px;
                        text-transform: uppercase;
                        letter-spacing: 0.5px;
                        margin-bottom: 5px;
                    }
                    .info-value {
                        font-weight: 600;
                        color: #2c3e50;
                    }
                    .items-table {
                        width: 100%;
                        border-collapse: collapse;
                        margin: 20px 0;
                    }
                    .items-table thead tr {
                        background: linear-gradient(135deg, #3498db, #2980b9);
                        color: white;
                    }
                    .items-table th {
                        padding: 12px 8px;
                        text-align: left;
                        font-weight: 600;
                        font-size: 11px;
                        text-transform: uppercase;
                        letter-spacing: 0.5px;
                    }
                    .items-table td {
                        padding: 10px 8px;
                        border-bottom: 1px solid #e9ecef;
                    }
                    .items-table tbody tr:hover {
                        background-color: #f8f9fa;
                    }
                    .section-row td {
                        background-color: #e9ecef;
                        font-weight: 600;
                        color: #2c3e50;
                        padding: 10px 8px !important;
                    }
                    .total-row {
                        background: linear-gradient(135deg, #2c3e50, #34495e);
                        color: white;
                    }
                    .total-row td {
                        padding: 15px 8px !important;
                        font-size: 16px;
                        font-weight: 700;
                        border: none !important;
                    }
                    .terms-section {
                        background-color: #f8f9fa;
                        border-radius: 8px;
                        padding: 20px;
                        margin-top: 30px;
                        font-size: 9pt;
                        border-left: 4px solid #3498db;
                    }
                    .terms-section h3 {
                        color: #2c3e50;
                        margin-top: 15px;
                        margin-bottom: 8px;
                        font-size: 11pt;
                    }
                    .terms-section p {
                        margin: 5px 0;
                        color: #555;
                    }
                    .terms-section ul {
                        margin: 5px 0 5px 20px;
                        color: #555;
                    }
                    .divider {
                        border: none;
                        border-top: 2px solid #e9ecef;
                        margin: 25px 0;
                    }
                    .customer-job-header {
                        background-color: #f1f3f4;
                        padding: 10px 15px;
                        border-radius: 6px;
                        margin-bottom: 15px;
                    }
                </style>
            </head>
            <t t-foreach="docs" t-as="record">
                <div class="page">
                    <!-- Header with Logo and Company Info -->
                    <table class="header-table">
                        <tr>
                            <td style="width: 50%; vertical-align: middle; text-align: left;">
                                <img t-if="record.company_id.logo"
                                    t-att-src="image_data_uri(record.company_id.logo)"
                                    style="max-height: 70px; max-width: 180px; object-fit: contain;"
                                />
                            </td>
                            <td style="width: 50%; vertical-align: middle; text-align: right;">
                                <p style="margin: 0; font-weight: 700; font-size: 14px; color: #2c3e50;"><span t-field="record.company_id.name"/></p>
                                <p style="margin: 2px 0; font-size: 12px; color: #6c757d;"><span t-field="record.company_id.street"/>, <span t-field="record.company_id.city"/> <span t-field="record.company_id.zip"/></p>
                                <p style="margin: 2px 0; font-size: 12px; color: #6c757d;"><span t-field="record.company_id.phone"/></p>
                            </td>
                        </tr>
                    </table>

                    <!-- Estimate Title -->
                    <h1 class="estimate-title">Estimate <span t-field="record.name"/></h1>
                    <p style="margin: 0; color: #6c757d; font-size: 13px;"><strong>Date:</strong> <span t-field="record.date_order" t-options='{"widget": "date"}'/></p>

                    <br/>

                    <!-- Billing and Job Address -->
                    <table style="width: 100%; border-collapse: collapse;">
                        <tr>
                            <td style="width: 48%; vertical-align: top;">
                                <div class="info-box">
                                    <p class="info-label">Billing Address</p>
                                    <p class="info-value" style="margin: 0;"><span t-field="record.partner_id.name"/></p>
                                    <p style="margin: 3px 0; font-size: 12px; color: #555;"><span t-field="record.partner_id.street"/>, <span t-field="record.partner_id.city"/> <span t-field="record.partner_id.zip"/></p>
                                </div>
                            </td>
                            <td style="width: 4%;"></td>
                            <td style="width: 48%; vertical-align: top;">
                                <div class="info-box">
                                    <p class="info-label">Job Address</p>
                                    <p class="info-value" style="margin: 0;"><span t-field="record.partner_shipping_id.name"/></p>
                                    <p style="margin: 3px 0; font-size: 12px; color: #555;"><span t-field="record.partner_shipping_id.street"/>, <span t-field="record.partner_shipping_id.city"/> <span t-field="record.partner_shipping_id.zip"/></p>
                                </div>
                            </td>
                        </tr>
                    </table>

                    <!-- Customer/Job Header -->
                    <div class="customer-job-header">
                        <table style="width: 100%;">
                            <tr>
                                <td style="text-align: left;"><strong>Customer:</strong> <span t-field="record.partner_id.name"/></td>
                                <td style="text-align: right;"><strong>Job:</strong> <span t-field="record.name"/></td>
                            </tr>
                        </table>
                    </div>

                    <!-- Items Table -->
                    <table class="items-table">
                        <thead>
                            <tr>
                                <th style="width: 50%;">Description</th>
                                <th style="width: 12%; text-align: center;">Quantity</th>
                                <th style="width: 12%; text-align: right;">Unit Price</th>
                                <th style="width: 12%; text-align: center;">Taxes</th>
                                <th style="width: 14%; text-align: right;">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="record.order_line" t-as="line">
                                <t t-if="line.display_type == 'line_section'">
                                    <tr class="section-row">
                                        <td colspan="5">
                                            <strong><span t-field="line.name"/></strong>
                                        </td>
                                    </tr>
                                </t>
                                <t t-elif="line.display_type == 'line_note'">
                                    <tr>
                                        <td colspan="5" style="font-style: italic; color: #6c757d;"><span t-field="line.name"/></td>
                                    </tr>
                                </t>
                                <t t-else="">
                                    <tr>
                                        <td><span t-field="line.name"/></td>
                                        <td style="text-align: center;"><span t-field="line.product_uom_qty"/></td>
                                        <td style="text-align: right;"><span t-field="line.price_unit"/></td>
                                        <td style="text-align: center;"><span t-field="line.tax_id"/></td>
                                        <td style="text-align: right;"><span t-field="line.price_subtotal"/></td>
                                    </tr>
                                </t>
                            </t>
                            <tr class="total-row">
                                <td colspan="4" style="text-align: right;">TOTAL</td>
                                <td style="text-align: right;"><span t-field="record.amount_total"/></td>
                            </tr>
                        </tbody>
                    </table>

                    <hr class="divider"/>

                    <!-- Terms and Conditions Section - Editable via scope_of_work field -->
                    <div class="terms-section">
                        <t t-if="record.scope_of_work">
                            <t t-raw="record.scope_of_work"/>
                        </t>
                        <t t-else="">
                            <h3>Scope of Work and Unforeseen Conditions</h3>
                            <p>The Client acknowledges that the scope of work in this estimate is based solely on visible conditions and the information available at the time of assessment.</p>
                            <p>If concealed or unforeseen conditions arise during the project, <span t-field="record.company_id.name"/> reserves the right to modify the project scope, schedule, and pricing as necessary.</p>
                            <p>No work beyond the original scope will proceed without the Client's approval.</p>

                            <h3>Additional Costs and Adjustments</h3>
                            <p>The rates listed for common unforeseen repairs (e.g., rotted decking, extra tear-off layers, structural framing repairs) are estimates only.</p>
                            <p>Final costs shall be determined based on actual conditions encountered.</p>
                            <p>The Client agrees that <span t-field="record.company_id.name"/> is not liable for additional costs arising from unknown or concealed damages.</p>

                            <h3>Owner's Responsibility</h3>
                            <p>The Owner is responsible for providing accurate information about existing conditions and for making accessible any areas required for inspection or repair.</p>
                            <p><span t-field="record.company_id.name"/> shall not be held responsible for delays, damages, or expenses caused by undisclosed conditions.</p>

                            <h3>Method of Payment</h3>
                            <p>Payment for the project shall be made in three installments as follows:</p>
                            <ul>
                                <li>An initial payment of fifty percent (50%) of the total contract price is due prior to commencing work.</li>
                                <li>A second payment of twenty-five percent (25%) is due upon completion of the dry-in stage.</li>
                                <li>The remaining twenty-five percent (25%) is due immediately upon final completion of the project.</li>
                            </ul>

                            <h3>Five (5) Year Labor Warranty</h3>
                            <p><strong>Scope of Warranty:</strong> <span t-field="record.company_id.name"/> warrants its labor for a period of five (5) years from the date of final completion. This warranty is strictly limited to defects in workmanship.</p>
                            <p><strong>Warranty Claims:</strong> The Client must notify <span t-field="record.company_id.name"/> in writing of any alleged defect in workmanship within fourteen (14) days of discovery.</p>
                            <p><strong>Exclusions:</strong> This warranty is void if the Client fails to pay all invoices in full, or if repairs are performed by unauthorized parties.</p>

                            <h3>No Guarantee of Final Cost</h3>
                            <p>This document supplements the principal Construction Agreement and does not bind <span t-field="record.company_id.name"/> to a fixed price.</p>

                            <h3>Acceptance</h3>
                            <p>By signing the Construction Agreement, the Client agrees to the terms and conditions regarding unforeseen conditions, associated costs, and the method of payment.</p>
                            <p>This estimate remains valid for thirty (30) days from the date of issuance.</p>
                        </t>
                    </div>

                    <!-- Custom Notes Section -->
                    <t t-if="record.estimate_notes">
                        <hr class="divider"/>
                        <div class="terms-section" style="border-left-color: #27ae60;">
                            <h3 style="color: #27ae60; margin-top: 0;">Additional Notes</h3>
                            <t t-raw="record.estimate_notes"/>
                        </div>
                    </t>

                </div>
            </t>
        </t>
    </template>
</odoo>
