<odoo>

    <record id="action_sale_order_new_report_2" model="ir.actions.report">
        <field name="name">New Quotation / Order (Simple)</field>
        <field name="model">sale.order</field>
        <field name="binding_model_id" ref="model_sale_order"/>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">pms.sale_order_new_report_2</field>
        <field name="binding_view_types">form,list</field>
        <field name="print_report_name">(object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or 'Order - %s' % (object.name)</field>
    </record>

    <template id="sale_order_new_report_2">
        <t t-call="web.html_container">
            <meta charset="UTF-8"/>
            <head>
                <style type="text/css">
                    body {
                        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                        color: #333;
                        line-height: 1.5;
                    }
                    .header-table {
                        width: 100%;
                        border-collapse: collapse;
                        margin-bottom: 20px;
                    }
                    .estimate-title {
                        color: #1a5f7a;
                        font-size: 28px;
                        font-weight: 600;
                        margin: 15px 0 5px 0;
                        border-bottom: 3px solid #57a773;
                        padding-bottom: 10px;
                    }
                    .info-box {
                        background-color: #f0f7f4;
                        border-radius: 8px;
                        padding: 15px;
                        margin-bottom: 20px;
                        border-left: 4px solid #57a773;
                    }
                    .info-label {
                        color: #6c757d;
                        font-size: 11px;
                        text-transform: uppercase;
                        letter-spacing: 0.5px;
                        margin-bottom: 5px;
                    }
                    .info-value {
                        font-weight: 600;
                        color: #1a5f7a;
                    }
                    .items-table {
                        width: 100%;
                        border-collapse: collapse;
                        margin: 20px 0;
                    }
                    .items-table thead tr {
                        background: linear-gradient(135deg, #1a5f7a, #2d8659);
                        color: white;
                    }
                    .items-table th {
                        padding: 12px 8px;
                        text-align: left;
                        font-weight: 600;
                        font-size: 11px;
                        text-transform: uppercase;
                        letter-spacing: 0.5px;
                    }
                    .items-table td {
                        padding: 10px 8px;
                        border-bottom: 1px solid #e9ecef;
                    }
                    .items-table tbody tr:hover {
                        background-color: #f8f9fa;
                    }
                    .section-row td {
                        background-color: #e8f4ec;
                        font-weight: 600;
                        color: #1a5f7a;
                        padding: 10px 8px !important;
                    }
                    .total-row {
                        background: linear-gradient(135deg, #1a5f7a, #2d8659);
                        color: white;
                    }
                    .total-row td {
                        padding: 15px 8px !important;
                        font-size: 16px;
                        font-weight: 700;
                        border: none !important;
                    }
                    .note-section {
                        background-color: #fff9e6;
                        border-radius: 8px;
                        padding: 20px;
                        margin-top: 30px;
                        font-size: 10pt;
                        border: 2px solid #ffc107;
                    }
                    .note-section h3 {
                        color: #856404;
                        margin: 0 0 10px 0;
                        font-size: 12pt;
                    }
                    .note-section p {
                        margin: 8px 0;
                        color: #555;
                    }
                    .divider {
                        border: none;
                        border-top: 2px solid #e9ecef;
                        margin: 25px 0;
                    }
                    .customer-job-header {
                        background: linear-gradient(135deg, #f0f7f4, #e8f4ec);
                        padding: 12px 15px;
                        border-radius: 6px;
                        margin-bottom: 15px;
                        border: 1px solid #57a773;
                    }
                </style>
            </head>
            <t t-foreach="docs" t-as="record">
                <div class="page">
                    <!-- Header with Logo and Company Info -->
                    <table class="header-table">
                        <tr>
                            <td style="width: 50%; vertical-align: middle; text-align: left;">
                                <img t-if="record.company_id.logo"
                                    t-att-src="image_data_uri(record.company_id.logo)"
                                    style="max-height: 70px; max-width: 180px; object-fit: contain;"
                                />
                            </td>
                            <td style="width: 50%; vertical-align: middle; text-align: right;">
                                <p style="margin: 0; font-weight: 700; font-size: 14px; color: #1a5f7a;"><span t-field="record.company_id.name"/></p>
                                <p style="margin: 2px 0; font-size: 12px; color: #6c757d;"><span t-field="record.company_id.street"/>, <span t-field="record.company_id.city"/> <span t-field="record.company_id.zip"/></p>
                                <p style="margin: 2px 0; font-size: 12px; color: #6c757d;"><span t-field="record.company_id.phone"/></p>
                            </td>
                        </tr>
                    </table>

                    <!-- Estimate Title -->
                    <h1 class="estimate-title">Estimate <span t-field="record.name"/></h1>
                    <p style="margin: 0; color: #6c757d; font-size: 13px;"><strong>Date:</strong> <span t-field="record.date_order" t-options='{"widget": "date"}'/></p>

                    <br/>

                    <!-- Billing and Job Address -->
                    <table style="width: 100%; border-collapse: collapse;">
                        <tr>
                            <td style="width: 48%; vertical-align: top;">
                                <div class="info-box">
                                    <p class="info-label">Billing Address</p>
                                    <p class="info-value" style="margin: 0;"><span t-field="record.partner_id.name"/></p>
                                    <p style="margin: 3px 0; font-size: 12px; color: #555;"><span t-field="record.partner_id.street"/>, <span t-field="record.partner_id.city"/> <span t-field="record.partner_id.zip"/></p>
                                </div>
                            </td>
                            <td style="width: 4%;"></td>
                            <td style="width: 48%; vertical-align: top;">
                                <div class="info-box">
                                    <p class="info-label">Job Address</p>
                                    <p class="info-value" style="margin: 0;"><span t-field="record.partner_shipping_id.name"/></p>
                                    <p style="margin: 3px 0; font-size: 12px; color: #555;"><span t-field="record.partner_shipping_id.street"/>, <span t-field="record.partner_shipping_id.city"/> <span t-field="record.partner_shipping_id.zip"/></p>
                                </div>
                            </td>
                        </tr>
                    </table>

                    <!-- Customer/Job Header -->
                    <div class="customer-job-header">
                        <table style="width: 100%;">
                            <tr>
                                <td style="text-align: left;"><strong>Customer:</strong> <span t-field="record.partner_id.name"/></td>
                                <td style="text-align: right;"><strong>Job:</strong> <span t-field="record.name"/></td>
                            </tr>
                        </table>
                    </div>

                    <!-- Items Table -->
                    <table class="items-table">
                        <thead>
                            <tr>
                                <th style="width: 50%;">Description</th>
                                <th style="width: 12%; text-align: center;">Quantity</th>
                                <th style="width: 12%; text-align: right;">Unit Price</th>
                                <th style="width: 12%; text-align: center;">Taxes</th>
                                <th style="width: 14%; text-align: right;">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="record.order_line" t-as="line">
                                <t t-if="line.display_type == 'line_section'">
                                    <tr class="section-row">
                                        <td colspan="5">
                                            <strong><span t-field="line.name"/></strong>
                                        </td>
                                    </tr>
                                </t>
                                <t t-elif="line.display_type == 'line_note'">
                                    <tr>
                                        <td colspan="5" style="font-style: italic; color: #6c757d;"><span t-field="line.name"/></td>
                                    </tr>
                                </t>
                                <t t-else="">
                                    <tr>
                                        <td><span t-field="line.name"/></td>
                                        <td style="text-align: center;"><span t-field="line.product_uom_qty"/></td>
                                        <td style="text-align: right;"><span t-field="line.price_unit"/></td>
                                        <td style="text-align: center;"><span t-field="line.tax_id"/></td>
                                        <td style="text-align: right;"><span t-field="line.price_subtotal"/></td>
                                    </tr>
                                </t>
                            </t>
                            <tr class="total-row">
                                <td colspan="4" style="text-align: right;">TOTAL</td>
                                <td style="text-align: right;"><span t-field="record.amount_total"/></td>
                            </tr>
                        </tbody>
                    </table>

                    <hr class="divider"/>

                    <!-- Note Section - Editable via scope_of_work field -->
                    <div class="note-section">
                        <h3>üìã Note</h3>
                        <t t-if="record.scope_of_work">
                            <t t-raw="record.scope_of_work"/>
                        </t>
                        <t t-else="">
                            <p>This proposal covers labor and installation only; client provides materials. Work is warranted for one (1) year for workmanship.</p>
                            <p>If hidden conditions are found, cost and schedule may be adjusted. Proposal valid for thirty (30) days.</p>
                        </t>
                    </div>

                    <!-- Custom Notes Section -->
                    <t t-if="record.estimate_notes">
                        <div class="note-section" style="margin-top: 15px; background-color: #e8f5e9; border-color: #4caf50;">
                            <h3 style="color: #2e7d32;">üìù Additional Notes</h3>
                            <t t-raw="record.estimate_notes"/>
                        </div>
                    </t>

                </div>
            </t>
        </t>
    </template>
</odoo>
