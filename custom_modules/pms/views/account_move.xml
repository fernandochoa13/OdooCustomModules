   <field name="code">
env['pms.projects'].function_run_log("off_hold_preprocessor")
record.off_hold_preprocessor()
   </field>
   <field name="trigger">on_write</field>
   <field name="active" eval="True"/>
   <field name="filter_pre_domain">
        [
            ('payment_state', 'in', ('not_paid', 'partial')), ('move_type', '=', 'out_invoice')
        ]
   </field>
   <field name="filter_domain">
        [
            ('payment_state', 'in', ('paid', 'in_payment')), 
            ('move_type', '=', 'out_invoice')
        ]
   </field>
</record>

