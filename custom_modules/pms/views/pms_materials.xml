    <record id="pms_materials_view_search" model="ir.ui.view">
        <field name="name">pms.materials.search</field>
        <field name="model">pms.materials</field>
        <field name="arch" type="xml">
            <search string="Materials Search">
                <field name="order_creator"/>
                <field name="name"/>
                <field name="property_id"/>
                <field name="county"/>
                <field name="property_owner"/>
                <field name="project_manager"/>
