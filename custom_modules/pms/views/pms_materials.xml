    <record id="pms_materials_view_form" model="ir.ui.view">
        <field name="name">pms.materials.form</field>
        <field name="model">pms.materials</field>
        <field name="arch" type="xml">
            <form string="Materials Form">
                <sheet class="o_form_sheet">
                    <div class="oe_title">
                        <h1>
                            <field name="name" widget="char" class="o_bold_title"/>
                        </h1>
                    </div>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="create_quotation" type="object" icon="fa-file-o" string="Create Quotation"/>
                        <button class="oe_stat_button" name="view_payment_request" type="object" icon="fa-pencil-square-o"
                            string="Payment Request" invisible="not linked_payment_request"
                        />
                    </div>
                    <header>
                        <button name="request_payment" string="Request Payment" type="object" class="btn-primary"/>
                        <button name="gave_payment" string="Give payment" type="object" class="btn-primary"/>
                        <button name="ordered" string="Set As Ordered" type="object" class="btn-primary"/>
                        <button name="set_delivered" string="Set As Delivered" type="object" class="btn-primary" /> 
                        <!-- <button name="waiting_for_conf" string="Set As Waiting for Confirmation" type="object" class="btn-primary"/> -->
                        <button name="return_to_not_ordered" string="Return to Not Ordered" type="object" class="btn-primary"/>
                        <button name="create_bill" string="Create Bill" type="object" class="btn-primary" invisible="has_bill"/>
                        <button name="no_availability_button" string="No Availability by Provider" type="object" class="btn-primary"/>
                        <field name="order_status" widget="statusbar" statusbar_visible="not_ordered,wait_cust,waiting_payment,gave_payment,ordered,delivered,rejected"/>
                    </header>
                    <group>
                        <group string="Property Details">
                            <field name="has_bill" invisible="1"/>
                            <field name="linked_payment_request" invisible="1"/>
                            <field name="property_name" invisible="1"/>
                            <field name="property_id"/>
                            <field name="property_status"/>
                            <field name="county"/>
                            <field name="property_owner"/>
                            <field name="project_manager"/>
                            <field name="zone_coordinator"/>
                            <field name="superintendent"/>
                            <field name="house_model" options="{'no_create': True}"/>
                            <field name="on_hold"/>
                            <field name="own_third"/>
                            <field name="project_phase"/>
                        </group>
                        <group string="Payment Details">
                            <field name="order_creator" readonly="1"/>
                            <field name="provider" string="Provider/Vendor"/>
                            <field name="reference"/>
                            <hr/><br/>
                            <field name="payment_terms"/>
                            <field name="payment_terms_anticipated"/>
                            <field name="payment_method"/>
                            <field name="payment_method_journal"/>
                            <hr/><br/>
                            <field name="escrow_company"/>
                            <field name="escrow_account"/>
                        </group>
                    </group>
                    <group string=" ">
                        <group string="Status Change Dates">
                            <!-- <field name="create_date"/> -->
                            <field name="order_creation_date" readonly="1"/>
                            <field name="order_request_date" readonly="1"/>
                            <field name="waiting_payment_date" readonly="1"/>
                            <field name="payment_date" readonly="1"/>
                            <field name="ordered_date" readonly="1"/>
                            <field name="estimated_delivery_date"/>
                            <field name="actual_delivery_date"
                                readonly="not is_purchase_manager or not is_purchase_analyst"/> 
                        </group>
                        <group string="Key Performance Indicators">
                            <field name="created_to_waiting_cust"/>
                            <field name="wait_to_gave_pay"/>
                            <field name="ordered_to_delivered"/>
                            <!-- <field name="wait_to_inv_pay"/> -->
                            <field name="inv_pay_to_ordered"/>
                        </group>
                    </group>
                    <group string=" ">
                        <group string="Bill &amp; Invoice details">
                            <field name="create_a_bill"/>
                            <field name="linked_bill"/>
                            <field name="linked_invoice"
                                options="{'no_create': True}"
                                domain="[('analytic_accounts', 'ilike', property_name), ('contractor', '=', provider), ('state', '!=', 'cancel')]"
                            />
                                <!-- -->
                                                    <!-- ('order_status', 'in', ['not_ordered', 'rejected']) -->
                            <!-- ('analytic_accounts', '=', property_id), -->
                            <field name="invoice_payment_status"/>
                            <field name="invoice_creation"/>
                            <field name="invoice_pay_date"/>
                            <field name="invoice_days_to_paid"/>
                        </group>
                        <group string="Special Order / 3rd Party Payment">
                            <field name="special_order"/>
                            <field name="is_purchase_manager" readonly="1" invisible="1"/>
                            <field name="special_order_approved"
                                readonly="not is_purchase_manager or not special_order"/>                            
                            <!-- invisible="not special_order" -->
                            <field name="is_purchase_analyst" readonly="1" invisible="1"/>
                            <hr/><br/>
                            <field name="third_party_payment"
                                readonly="not is_purchase_manager or not is_purchase_analyst"/>    
                        </group>
                    </group>
                    <group string="Follow Ups">
                        <field name="followups"/>
                    </group>
                    <group string="Material Lines">
                        <field name="material_lines"/>
                        <field name="total_order_amount"/>
                        <!-- <field name="rejections_count"/> -->
                        <field name="re_order_id" string="Re-Order ID" readonly="1">
                            <list>
                                <field name="reference"/>
                                <field name="order_creator"/>
                                <field name="property_id"/>
                                <field name="provider"/>
                                <button name="open_order" string="OPEN" type="object" class="btn-info"/>
                            </list>
                        </field> 
                        <field name="rejection_note"/>
                        <field name="confirmed_by"/>
                        <field name="signed_by" widget="signature"/>
                        <button name="redo_order" string="REORDER" type="object" class="btn-warning"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

