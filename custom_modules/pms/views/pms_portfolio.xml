<odoo>
    <record id="view_pms_portfolio_tree" model="ir.ui.view">
        <field name="name">pms.portfolio.tree</field>
        <field name="model">pms.portfolio</field>
        <field name="arch" type="xml">
            <list>
                <field name="arv"/>
                <field name="name"/>
                <field name="property_address" widget="many2many_tags"/>
                <field name="color" widget="color"/>
            </list>
        </field>
    </record>

    <record id="view_pms_portfolio_form" model="ir.ui.view">
        <field name="name">pms.portfolio.form</field>
        <field name="model">pms.portfolio</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="arv"/>
                        <field name="name"/>
                        <field name="property_address" widget="many2many_tags"/>
                        <field name="color" widget="color"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_pms_portfolio" model="ir.actions.act_window">
        <field name="name">PMS Portfolio</field>
        <field name="res_model">pms.portfolio</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="pms_portfolio_menu" name="PMS Portfolio" parent="pms.pms_menu_properties"
        sequence="205" action="action_pms_portfolio"/> 

</odoo>