<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="pms_properties_insuranceline_view_search" model="ir.ui.view">
        <field name="name">pms.insuranceline.search</field>
        <field name="model">pms.insuranceline</field>
        <field name="arch" type="xml">
            <search string="Default Search">
             
                <field name="name" string="Buildings" />
                <field name="properties_associates"/>
                <field name="coverage_amount"/>
                <field name="premiun_amount"/>
                <field name="insurance_header"/>
                <field name="insurance_types"/>
                <field name="policy_number"/>
                <field name="insurance_policy_end_date"/>
                <field name="days_to_expire"/>
                <field name="insurance_agent"/>
                <field name="open_claim"/>  
            </search>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_pms_insuranceline_tree" model="ir.ui.view">
        <field name="name">pms.insuranceline.tree</field>
        <field name="model">pms.insuranceline</field>
        <field name="arch" type="xml">
            <list string="Insurance Policies Lines" editable="top">
                <field name="name" optional="show"/>
                <field name="properties_associates" optional="show"/>
                <field name="coverage_amount" optional="show"/>
                <field name="premiun_amount" optional="show"/>
                <field name="insurance_header" optional="hide"/>
                <field name="insurance_types" optional="show"/>
                <field name="policy_number" optional="show"/>
                <field name="insurance_policy_end_date" optional="show"/>
                <field name="days_to_expire" optional="show"/>
                <field name="insurance_agent" optional="show"/>
                <field name="open_claim" optional="show"/>  
            </list>

        </field>
    </record>

    <record id="pms_properties_insuranceline_view" model="ir.actions.act_window">
        <field name="name">Insurance Line</field>
        <field name="res_model">pms.insuranceline</field>
        <field name="view_mode">list</field>
    </record>

</odoo>
