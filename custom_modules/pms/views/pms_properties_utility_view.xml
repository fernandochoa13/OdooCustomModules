<odoo>

<record id="pms_properties_utility_view_tree" model="ir.ui.view">
    <field name="name">pms.utility.tree</field>
    <field name="model">pms.property</field>
    <field name="arch" type="xml">
        <list string="Utility Master Table" editable="bottom">
                                                        <!-- General -->
            <field name="name" optional="show" readonly="1"/>
            <field name="county" optional="show" readonly="1"/>
            <field name="parcel_id" optional="show" readonly="1"/>
            <field name="house_model" optional="show" readonly="1"/>
            <field name="partner_id" optional="show" readonly="1"/>
            <field name="utility_phase" optional="show" readonly="1"/>
            <field name="general_sunshine" optional="show"/> 
                                                        <!-- Electrical -->
            <field name="e_type" optional="show"/>
            <field name="e_work_order" optional="show"/>
            <field name="e_account_number" optional="show"/>
            <field name="e_app_date" optional="show"/>
            <field name="e_conn_type" optional="show"/>
            <field name="e_invoice" optional="show"/>
            <field name="e_payment_date" optional="show"/>
            <field name="elect_meter" optional="show"/>
            <field name="e_utility_provider" optional="show"/>
            <field name="elect_meter_position" optional="show"/>
            <field name="elect_meter_request" optional="show"/>
            <field name="e_conn_status" optional="show"/>
            <field name="e_conn_date" optional="show"/>
            <field name="e_comments" optional="show"/>
            <field name="elect_meter_request_date" optional="show"/>
            <field name="e_disconn_date" optional="show"/>
            <field name="elect_utility_engineer" optional="show"/>
            <field name="e_tug" optional="show"/>
            
                                                                <!-- Water -->
            <field name="w_type" optional="hide"/>
            <field name="w_work_order" optional="hide"/>
            <field name="w_account_number" optional="hide"/>
            <field name="w_app_date" optional="hide"/>
            <field name="water_conn_type" optional="hide"/>
            <field name="w_utility_provider" optional="hide"/>
            <field name="w_conn_status" optional="hide"/>
            <field name="w_comments" optional="hide"/>
            <field name="water_connection_request" optional="hide"/>
            <field name="w_conn_date" optional="hide"/>
            <field name="w_payment_date" optional="hide"/>
            <field name="w_disconn_date" optional="hide"/>
            <field name="w_invoice" optional="hide"/>
        </list>
    </field>
</record>

<record id="pms_properties_utility_view" model="ir.actions.act_window">
    <field name="name">Utility</field>
    <field name="res_model">pms.property</field>
    <field name="view_mode">list</field>
    <field name="view_id" ref="pms_properties_utility_view_tree"/>
    <field name="context">{'tree_view_ref' : 'pms_properties_utility_view_tree'}</field>
</record>

<record id="action_server_pms_utility_connect" model="ir.actions.server">
    <field name="name">Connect Utility</field>
    <field name="type">ir.actions.server</field>
    <field name="model_id" ref="pms.model_pms_utility"/>
    <field name="binding_model_id" ref="pms.model_pms_utility"/>
    <field name="state">code</field>
    <field name="code">
    if records:
    records.connect()
    </field>
</record>

<record id="action_server_pms_utility_disconnect" model="ir.actions.server">
    <field name="name">Disconnect Utility</field>
    <field name="type">ir.actions.server</field>
    <field name="model_id" ref="pms.model_pms_utility"/>
    <field name="binding_model_id" ref="pms.model_pms_utility"/>
    <field name="state">code</field>
    <field name="code">
    if records:
    records.disconnect()
    </field>
</record>

</odoo>

