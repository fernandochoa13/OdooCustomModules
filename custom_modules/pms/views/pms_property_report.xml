<odoo>
    <data>

        <record id="pms_property_report_pin_wizard_form" model="ir.ui.view">
            <field name="name">pms.property.report.pin.wizard.form</field>
            <field name="model">pms.property.report.pin.wizard</field>
            <field name="arch" type="xml">
                <form string="Property Report PIN Wizard">
                        <group name="general details" class="o_group">
                            <field name="employee_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="employee_pin" password="True" options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                    <footer>
                        <button name="verification_action" string="Verify Employee" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

         <record id="pms_property_reports_search" model="ir.ui.view">
            <field name="name">pms.property.report.search</field>
            <field name="model">pms.property.report</field>
            <field name="arch" type="xml">
                <search string="Default Search">
                        <field name="employee_id"/>
                        <field name="report_date"/>
                </search>
            </field>
        </record>

        <record id="pms_property_report_tree" model="ir.ui.view">
            <field name="name">pms.property.report.tree</field>
            <field name="model">pms.property.report</field>
            <field name="arch" type="xml">
                <list string="PMS Property Reports">
                    <field name="employee_id"/>
                    <field name="property_name"/>
                    <field name="county"/>
                    <field name="project_manager"/>
                    <field name="superintendent"/>
                    <field name="zone_coordinator"/>
                    <field name="property_status"/>
                    <field name="report_date"/>
                    <field name="inspections_in_progress"/>
                    <field name="inspections_to_request"/>
                    <field name="materials_notes"/>
                    <field name="contractors_in_progress"/>
                    <field name="expected_co_date"/>
                </list>
            </field>
        </record>

        <record id="pms_property_report_form" model="ir.ui.view">
            <field name="name">pms.property.report.form</field>
            <field name="model">pms.property.report</field>
            <field name="arch" type="xml">
                <form string="PMS Property Report Form" class="o_sale_order">

                <sheet class="o_form_sheet">
                <group> 
                    <field name="employee_id"/>
                    <field name="report_date"/>
                    <field name="property_name"/>
                    <field name="county"/>
                    <field name="project_manager"/>
                    <field name="superintendent"/>
                    <field name="zone_coordinator"/>
                    <field name="property_status"/>
                    <field name="inspections_in_progress" widget="many2many_tags"/>
                    <field name="inspections_to_request">
                        <list string="Inspections To Request">
                            <field name="inspections"/>
                            <field name="property_report_date"/>
                        </list>
                    </field>
                    <field name="materials_notes"/>
                    <field name="contractors_in_progress">
                        <list string="Contractors In Progress">
                            <field name="contractors"/>
                            <field name="job_status"/>
                        </list>
                    </field>
                    <field name="expected_co_date"/>
                </group> 
                </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" groups="base.group_user"/>
                <field name="activity_ids"/>
                <field name="message_ids"/>
        </div>
                </form>
            </field>


        </record>

            <record id="pms_property_report_pin_wizard_action" model="ir.actions.act_window">
                <field name="name">Property Report Wizard</field>
                <field name="res_model">pms.property.report.pin.wizard</field>
                <field name="view_mode">form</field>
                <field name="target">new</field>
            </record>


            <record id="pms_property_report_action" model="ir.actions.act_window">
                <field name="name">PMS Property Report</field>
                <field name="res_model">pms.property.report</field>
                <field name="view_mode">list,form</field>
                <field name="view_id" ref="pms_property_report_tree"/>
                <field name="search_view_id" ref="pms_property_reports_search"/>
            </record>

            <menuitem id="pms_property_report_menu" name="PMS Property Report" parent="pms.pms_menu_properties"
                sequence="200" action="pms_property_report_pin_wizard_action"/> 

    </data>
</odoo>