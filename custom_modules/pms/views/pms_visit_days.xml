<odoo>

<record id="pms_visit_days_view_search" model="ir.ui.view">
        <field name="name">pms.visit.days.search</field>
        <field name="model">pms.visit.days</field>
        <field name="arch" type="xml">
            <search string="Default Search">
                <field name="property_name"/>
                <field name="project_phase"/>
                <field name="project_on_hold"/>
                <field name="visit_date"/>
                <field name="visited_by"/>
            </search>
        </field>
</record>


<record id="pms_visit_days" model="ir.ui.view">
    <field name="name">pms.visit.days.tree</field>
    <field name="model">pms.visit.days</field>
    <field name="arch" type="xml">
        <list string="PMS Visit Days" editable="bottom">
            <field name="property_name"/>
            <field name="project_phase"/>
            <field name="project_on_hold"/>
            <field name="visit_date"/>
            <field name="visited_by"/>
        </list>
    </field>
</record>

<record id="pms_plan_visit_days" model="ir.ui.view">
    <field name="name">pms.planned.visit.days.tree</field>
    <field name="model">pms.planned.visit.days</field>
    <field name="arch" type="xml">
        <list string="PMS Planned Visit Days" editable="bottom">
            <field name="planned_property"/>
            <field name="project_phase"/>
            <field name="planned_visit_date"/>
            <field name="planned_visitor"/>
        </list>
    </field>
</record>

<record id="pms_visit_days_action" model="ir.actions.act_window">
    <field name="name">Visit Days</field>
    <field name="res_model">pms.visit.days</field>
    <field name="view_mode">list</field>
</record>

<record id="pms_planned_visit_days_action" model="ir.actions.act_window">
    <field name="name">Planned Visit Days</field>
    <field name="res_model">pms.planned.visit.days</field>
    <field name="view_mode">list</field>
</record>

<record id="view_visit_days_wizard_form" model="ir.ui.view">
            <field name="name">visit.days.wizard.form</field>
            <field name="model">visit.days.wizard</field>
            <field name="arch" type="xml">
                <form string="New Bulk Wizard">
                        <group name="general details" class="o_group">
                            <field name="visit_date"/>
                            <field name="visited_by"/> 
                        </group>
                    <footer>
                        <button name="create_visit_days" string="Create Visits" type="object" class="oe_highlight"/>
                        <button name="cancel" string="Cancel" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="view_visit_days_wizard_bulk_action" model="ir.actions.act_window">
            <field name="name">Visit Days in Bulk</field>
            <field name="res_model">visit.days.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


<record id="view_planned_visit_days_wizard_form" model="ir.ui.view">
            <field name="name">planned.visit.days.wizard.form</field>
            <field name="model">planned.visit.days.wizard</field>
            <field name="arch" type="xml">
                <form string="Bulk Planned Visit Days Wizard">
                        <group name="general details" class="o_group">
                            <field name="planned_visit_date"/>
                            <field name="planned_visitor"/> 
                        </group>
                    <footer>
                        <button name="create_planned_visit_days" string="Create Planned Visits" type="object" class="oe_highlight"/>
                        <button name="cancel" string="Cancel" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="view_planned_visit_days_wizard_bulk_action" model="ir.actions.act_window">
            <field name="name">Planned Visit Days in Bulk</field>
            <field name="res_model">planned.visit.days.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

</odoo>