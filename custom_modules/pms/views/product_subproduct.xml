<?xml version="1.0"?>
<odoo>
<data>
        <record id="view_subproduct_form" model="ir.ui.view" >
            <field name="name">product.subproduct.form</field>
            <field name="model">product.subproduct</field>
            <field name="arch" type="xml">
            <form string="Subproducts" default_order='date desc'>

                <sheet class="o_form_sheet">
                    
                    <field name="name"/>

                </sheet>
            </form>
        </field>

        </record>

        <record id="view_subproduct_tree" model="ir.ui.view" >
            <field name="name">product.subproduct.tree</field>
            <field name="model">product.subproduct</field>
            <field name="arch" type="xml">
                <list string="Subproducts" >
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="action_view_subproducts" model="ir.actions.act_window">
            <field name="name">Subproducts</field>
            <field name="res_model">product.subproduct</field>
            <field name="view_mode">list,form</field>
        </record>
        
        <menuitem id="menu_subproducts" name="Subproducts" parent="account.menu_finance_configuration" action="action_view_subproducts"/>

        </data>
    </odoo>