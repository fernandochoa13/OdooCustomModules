<odoo>
    <data>
        <!-- Form View -->
        <record id="approve_bill_wizard_form" model="ir.ui.view">
            <field name="name">approve.bills.wizard.form</field>
            <field name="model">approve.bills.wizard</field>
            <field name="arch" type="xml">
                <form string="Bill Approval Wizard">
                    <group>
                        <field name="user_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    </group>
                    <footer>
                        <button name="generate_bill_approval_reports" string="View Bill Approval Report" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="view_bill_approval_wizard_action" model="ir.actions.act_window">
            <field name="name">Bill Approval Wizard</field>
            <field name="res_model">approve.bills.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_account_approve_bills_wizard" name="Bill Approval Report" parent="account.menu_finance_reports" action="view_bill_approval_wizard_action" sequence="100"/>

    </data>
</odoo>