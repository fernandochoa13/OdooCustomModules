<odoo>
    <data>
        <!-- Form View -->
        <record id="budget_date_wizard_form" model="ir.ui.view">
            <field name="name">budget.date.wizard.form</field>
            <field name="model">budget.date.wizard</field>
            <field name="arch" type="xml">
                <form string="Budget Date Wizard">
                        <group name="general details" class="o_group">
                            <field name="date"/>
                        </group>
                    <footer>
                        <button name="set_budget_date" string="Set Budget Date" type="object" class="oe_highlight"/>
                        <button special="cancel" string="Cancel" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="budget_date_wizard_action" model="ir.actions.act_window">
            <field name="name">Budget Date Wizard</field>
            <field name="res_model">budget.date.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>