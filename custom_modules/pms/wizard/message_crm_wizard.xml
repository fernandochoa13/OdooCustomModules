<odoo>
    <record id="view_message_crm_wizard_form" model="ir.ui.view">
        <field name="name">message.crm.wizard.form</field>
        <field name="model">message.crm.wizard</field>
        <field name="arch" type="xml">
            <form string="Message CRM Wizard">
                <group>
                    <field name="sms"/>
                    <field name="whatsapp"/>
                    <field name="silva_config"/>
                    <field name="message_text"/>
                </group>
                <footer>
                    <button string="Send Message" type="object" name="send_message" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_message_crm_wizard" model="ir.actions.act_window">
        <field name="name">Message CRM Wizard</field>
        <field name="res_model">message.crm.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
