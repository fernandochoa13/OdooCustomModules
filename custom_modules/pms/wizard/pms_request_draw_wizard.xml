
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_pms_request_draw_wizard_form" model="ir.ui.view">
            <field name="name">pms.request.draw.wizard.form</field>
            <field name="model">pms.request.draw.wizard</field>
            <field name="arch" type="xml">
                <form string="PMS Request Draw Wizard">
                    <group>
                        <field name="draw_ref"/>
                    </group>
                    <footer>
                        <button name="open_request_draw" string="Request Draw" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="view_pms_request_draw_wizard" model="ir.actions.act_window">
            <field name="name">Request Draw Wizard</field>
            <field name="res_model">pms.request.draw.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>