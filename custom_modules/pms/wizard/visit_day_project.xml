<odoo>
    <data>
        <!-- Form View -->
        <record id="view_visit_projects_bulk_wizard_form" model="ir.ui.view">
            <field name="name">visit.day.project.wizard.form</field>
            <field name="model">visit.day.project.wizard</field>
            <field name="arch" type="xml">
                <form string="Visit Days Bulk Wizard">
                    <h3>Add visit days to projects in bulk:</h3>
                        <br></br>
                        <group name="general details" class="o_group">
                            <field name="type_visit_day"/>
                            <field name="day_of_week"/>
                            <field name="day_of_week_second"/>  
                        </group>
                    <footer>
                        <button name="set_visit_days" string="Set Visit Days" type="object" class="oe_highlight"/>
                        <button special="cancel" string="Cancel" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="view_visit_projects_bulk_wizard" model="ir.actions.act_window">
            <field name="name">Visit Days Projects in Bulk</field>
            <field name="res_model">visit.day.project.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>