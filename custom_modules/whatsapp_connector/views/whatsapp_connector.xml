<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_whatsapp_connector_tree" model="ir.ui.view">
            <field name="name">whatsapp_connector.tree</field>
            <field name="model">whatsapp.connector</field>
            <field name="arch" type="xml">
                <list>
                    <field name="url"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_whatsapp_connector_form" model="ir.ui.view">
            <field name="name">whatsapp_connector.form</field>
            <field name="model">whatsapp.connector</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="url"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_whatsapp_connector" model="ir.actions.act_window">
            <field name="name">WhatsApp Connector</field>
            <field name="res_model">whatsapp.connector</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_whatsapp_connector" name="WhatsApp Connector" parent="account.menu_finance_configuration" sequence="20"/>
        <menuitem id="menu_whatsapp_connector_list" name="WhatsApp Connector" parent="menu_whatsapp_connector" action="action_whatsapp_connector"/>
    </data>
</odoo>