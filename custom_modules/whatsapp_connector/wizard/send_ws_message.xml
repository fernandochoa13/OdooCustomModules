<odoo>
    <data>
        <!-- Define the form view for the wizard -->
        <record id="view_send_ws_message_wizard_form" model="ir.ui.view">
            <field name="name">send.ws.message.wizard.form</field>
            <field name="model">send.ws.message.wizard</field>
            <field name="arch" type="xml">
                <form string="Send WS Message">
                    <!-- Add your fields here -->
                    <group>
                        <field name="body" string="Message" required="1"/>
                        <field name="message_template" string="Template" required="1"/>
                    </group>
                    <footer>
                        <button name="send_message" string="Send" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Define the action for the wizard -->
        <record id="action_send_ws_message_wizard" model="ir.actions.act_window">
            <field name="name">Send WS Message</field>
            <field name="res_model">send.ws.message.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>